<style>
  body {
    margin: 0;
    overflow: hidden;
    font-family: Arial, sans-serif;
    background: linear-gradient(135deg, #ff758c, #ff7eb3);
    text-align: center;
    color: white;
  }

  .container {
    position: relative;
    top: 20vh;
  }

  h1 {
    font-size: 3em;
    animation: fadeIn 2s ease-in-out;
  }

  #countdown {
    font-size: 2em;
    margin: 20px;
  }

  button {
    font-size: 20px;
    padding: 12px 25px;
    margin: 15px;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: 0.3s;
  }

  #yes {
    background-color: #ff2e63;
    color: white;
  }

  #yes:hover {
    transform: scale(1.1);
  }

  #no {
    background-color: #333;
    color: white;
    position: absolute;
  }

  /* Floating hearts */
  .heart {
    position: absolute;
    color: rgba(255,255,255,0.7);
    font-size: 20px;
    animation: float 6s linear infinite;
  }

  @keyframes float {
    0% { transform: translateY(100vh); opacity: 1; }
    100% { transform: translateY(-10vh); opacity: 0; }
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style>
